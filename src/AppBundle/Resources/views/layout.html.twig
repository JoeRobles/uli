{% extends '::base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets -%}
    {{ parent() }}
    {% stylesheets output='css/main.css' filter='cssrewrite' debug=false
        'bundles/app/css/styles.css' -%}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block body -%}
            {% for type, flashMessage in app.session.flashbag.all() %}
            <div class="alert alert-{{ type }} fade in">
                <button class="close" data-dismiss="alert" type="button">Ã—</button>
                {% if flashMessage.title is defined %}
                <strong>{{ flashMessage.title }}</strong>
                {{ flashMessage.message }}
                {% else %}
                {{ type }}
                {% endif %}
            </div>
            {% endfor %}
            <div id="flash_message" class="alert hidden">
                <strong id="flash_title"></strong>
            </div>
            <div id="uliModal" class="modal fade"></div>
            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand-padding" href="{{ path('uli_app_default_index') }}">
                            {%- image '@AppBundle/Resources/public/images/uli-logo.png' -%}
                            <img src="{{ asset_url }}" title="ULI" alt="ULI" width="354" height="39">
                            {%- endimage -%}
                        </a>
                    </div>
                    <div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="phone"><span class="speak bold h4">Speak with a Licensed Insurance Agent:</span> <span class="orange bold h2">888-888-8888</span></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="wrapper">
                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts output='js/main.js' debug=false
        '@AppBundle/Resources/public/js/scripts.js' -%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
